<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="QuizTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">48dp</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextAnswerStyle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AnswerStyle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/colorSecondary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:orientation">vertical</item>

    </style>


</resources>
